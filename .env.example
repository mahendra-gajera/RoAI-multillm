# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini/gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=8000

# Router Configuration
CONTEXT_LENGTH_THRESHOLD=80000
BUSINESS_IMPACT_THRESHOLD=0.8
ENSEMBLE_DEVIATION_THRESHOLD=15

# Cost Configuration (per 1M tokens in USD)
OPENAI_INPUT_COST=0.15
OPENAI_OUTPUT_COST=0.6
GEMINI_INPUT_COST=0.075
GEMINI_OUTPUT_COST=0.3

# RoAI Configuration
MANUAL_REVIEW_COST_PER_HOUR=100
AVERAGE_FRAUD_PREVENTION_VALUE=5000

# LiteLLM Configuration (optional)
LITELLM_LOG=INFO

# Advanced Features - Caching
ENABLE_CACHING=true
CACHE_TTL=3600

# Advanced Features - Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Advanced Features - Budget Controls
ENABLE_BUDGET_CONTROLS=true
DAILY_BUDGET_LIMIT=100.0
MONTHLY_BUDGET_LIMIT=1000.0

# Audit Logging
AUDIT_LOG_DIR=data/audit_logs

# Prompt Management
PROMPT_STORAGE_PATH=data/prompts
